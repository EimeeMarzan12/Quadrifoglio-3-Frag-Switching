<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#CCCCCC"
    android:background="@color/white">

    <!-- User Information Layout -->
    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="20dp">

        <!-- User Profile Picture -->
        <ImageView
            android:id="@+id/item_pic1"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:src="@drawable/sample_user" />

        <!-- User Name Placeholder -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:text="User Name"
            style="@style/size18Text_DavysGray_bold" />
    </RelativeLayout>

    <!-- Username Layout -->
    <RelativeLayout
        android:id="@+id/username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_layout"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:background="#F5F5F5"
        android:elevation="2dp">

    <!-- Username Label -->
    <TextView
        android:id="@+id/user_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Username"
        style="@style/size14Text_DavysGray_bold"
        android:layout_alignParentStart="true" />

    <!-- Username Value -->
    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_name2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="2dp"
        android:text="Username Placeholder"
        style="@style/size12Text_DavysGray"
        android:layout_centerVertical="true" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_username"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3" /> <!-- Light gray divider -->
</RelativeLayout>

        <!-- Password Layout -->
    <RelativeLayout
    android:id="@+id/password_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/username_layout"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:background="#F5F5F5"
        android:elevation="2dp">

        <!-- Password Label -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:text="Password"
    style="@style/size14Text_DavysGray_bold"
    android:layout_alignParentStart="true" />

        <!-- Password Value -->
    <TextView
    android:id="@+id/user_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="90dp"
    android:text="Password Placeholder"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="2dp"
    style="@style/size12Text_DavysGray"
    android:layout_centerVertical="true" />

        <!-- Divider -->
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/user_password"
    android:layout_marginTop="10dp"
    android:background="#D3D3D3" /> <!-- Light gray divider -->
    </RelativeLayout>



    <!-- Sign Out Button Layout -->
    <RelativeLayout
        android:id="@+id/user_signout_layout"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_marginLeft="110sp"
        android:layout_marginRight="110sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_light_gray"
        android:clickable="true"
        android:focusable="true"

        >

        <TextView
            style="@style/size14Text_DavysGray_bold"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30sp"
            android:gravity="center_vertical"
            android:text="Sign out" />

        <RelativeLayout
            android:id="@+id/exit"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="80sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:padding="10sp">

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/ic_exit" />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>